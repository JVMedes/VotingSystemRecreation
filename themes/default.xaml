<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- old FF123456-->
    <Color x:Key="darkBlue">#0d245c</Color>
    <Color x:Key="lameYellow"></Color>
    <SolidColorBrush Color="#0d245c" x:Key="darkBlueBrush"/>
    <SolidColorBrush Color="#f0a740" x:Key="lameYellowBrush"/>

    <Style TargetType="Button" x:Key="ThemeButton">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource darkBlueBrush}"/>
        <Setter Property="Background" Value="{DynamicResource lameYellowBrush}"/>
    </Style>
</ResourceDictionary>